server {
  listen 80;
  server_name _;

  location /fbq-theme/ {
    alias /opt/fbq-theme/;
    add_header Cache-Control "no-cache";
  }

  # NEW: same-origin proxy to the shim
  location /shim/ {
    proxy_pass http://127.0.0.1:8090/;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $remote_addr;
  }

  location / {
    proxy_pass http://127.0.0.1:8080;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $remote_addr;

    # allow sub_filter to see HTML
    proxy_set_header Accept-Encoding "";

    sub_filter_once on;
    sub_filter_types text/html text/plain;

    # inject CSS and JS
    sub_filter '</head>' '<link rel="stylesheet" href="/fbq-theme/masso-forum.css"><script defer src="/fbq-theme/masso.js"></script></head>';
  }
}
